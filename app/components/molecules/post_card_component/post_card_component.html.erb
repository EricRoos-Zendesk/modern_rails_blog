<%= render Atoms::CardComponent.new do %>
  <div class="flex items-center justify-between">
    <span class="font-light text-gray-600"><%= @post_date %></span>
    <a href="#" class="px-2 py-1 font-bold text-gray-100 bg-gray-600 rounded hover:bg-gray-500">Laravel</a>
  </div>
  <div class="mt-2">
    <div class="text-4xl font-bold text-gray-700">
      <%= @post_title %>
    </div>
    <div class="flex items-center justify-between mt-4">
      <div>
        <div class="flex items-center">
          <img src="<%= @author_image_url %>" alt="avatar" class="hidden object-cover w-10 h-10 mr-4 rounded-full sm:block">
          <h1 class="font-bold text-gray-700 hover:underline"><%= @author_name %></h1>
        </div>
      </div>
    </div>
    <div class="mt-4">
      <%= content %>
    </div>
  </div>
<% end %>
