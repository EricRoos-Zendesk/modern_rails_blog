<%= render Atoms::CardComponent.new do %>
  <div class="flex items-center justify-between">
    <span class="font-light text-gray-600"><%= @post_date %></span>
    <a href="#" class="px-2 py-1 font-bold text-gray-100 bg-gray-600 rounded hover:bg-gray-500">Laravel</a>
  </div>
  <div class="mt-2">
    <a href="<%= @read_more_href %>" class="text-2xl font-bold text-gray-700 hover:underline">
      <%= @post_title %>
    </a>
    <div class="mt-2 text-gray-600">
      <%= content %>
    </div>
  </div>
  <div class="flex items-center justify-between mt-4">
    <a href="<%= @read_more_href %>" class="text-blue-500 hover:underline">Read more</a>
    <%= render Atoms::UserNamePlateComponent.new(name: @author_name, image_url: @author_image_url) %>
  </div>
<% end %>
