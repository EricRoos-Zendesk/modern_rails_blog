<%= render Atoms::CardComponent.new do %>
  <div class="flex items-center justify-between">
    <span class="font-light text-gray-600"><%= @post_date %></span>
    <a href="#" class="px-2 py-1 font-bold text-gray-100 bg-gray-600 rounded hover:bg-gray-500">Laravel</a>
  </div>
  <div class="mt-2">
    <a href="#" class="text-2xl font-bold text-gray-700 hover:underline">
      <%= @post_title %>
    </a>
    <div class="mt-2 text-gray-600">
      <%= content %>
    </div>
  </div>
  <div class="flex items-center justify-between mt-4">
    <a href="#" class="text-blue-500 hover:underline">Read more</a>
    <div>
      <a href="#" class="flex items-center">
        <img src="<%= @author_image_url %>" alt="avatar" class="hidden object-cover w-10 h-10 mx-4 rounded-full sm:block">
        <h1 class="font-bold text-gray-700 hover:underline"><%= @author_name %></h1>
      </a>
    </div>
  </div>
<% end %>
