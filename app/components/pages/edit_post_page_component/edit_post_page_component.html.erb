<%= render Templates::TwoColumnComponent.new do |page_template| %>
  <%= page_template.main_content do %>
    <%= render Atoms::CardComponent.new do %>
      <div class="text-4xl font-bold text-gray-700">
        Edit Post
      </div>
      <%= form_with(model: @post, class: "contents") do |form| %>
        <% if @post.errors.any? %>
          <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
            <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
              <% @post.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="my-5">
          <%= form.label :title %>
          <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="field">
          <%= form.label :content %>
          <%= form.rich_text_area :content %>
        </div>

        <div class="inline">
          <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
        </div>
      <% end %>
    <% end %>
  <% end %>

  <%= page_template.side_content do %>
    <%= render Atoms::CardComponent.new do %>
      <div class='grid grid-cols-1 gap-2'>
        <div>
          <%= render Atoms::LinkComponent.new(variant: :text, path: post_path(@post), options: { class: 'text-black hover:underline' }) do %>
            View Post 
          <% end %>
        </div>
        <div>
          <%= render Atoms::LinkComponent.new(variant: :text, path: posts_path, options: { class: 'text-black hover:underline' }) do %>
            Back to posts
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
