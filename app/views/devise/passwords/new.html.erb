<%= render Templates::FixedCenterCardComponent.new do |template| %>
  <% template.above_matter do %>
    <div class='mx-auto text-2xl font-bold  mb-3'>
      Forgot your password?
    </div>
    <hr class='mb-3'/>
  <% end %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo: false }, html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-5">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  <% end %>

  <hr class='my-3' />

  <%= render "devise/shared/links" %>
<% end %>
